<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <%- partial('./partials/components') %>
</head>
<body>
<%- partial('./partials/studentNavbar') %>
<br><h3 align="right">Hello, <%= username %></h3>
<h1 align="center"><%= title %></h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">â„–</th>
            <th scope="col">Subject</th>
            <th scope="col">Name</th>
            <th scope="col">Version</th>
            <% if (original) { %>
                <th scope="col">Author</th>
            <% } %>
            <th scope="col">Assessment</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i = 0; i < testsList.length; i++) { %>
                <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= testsList[i].subject %></td>
                    <td><%= testsList[i].name %></td>
                    <% if (testsList[i].version[1] === "Last") { %>
                        <td><%= testsList[i].version[0] %></td>
                    <% } else { %>
                        <td><%= testsList[i].version %></td>
                    <% } %>
                    <% if (original) { %>
                        <td><%= testsList[i].author.name %></td>
                    <% } %>
                    <% if (testsList[i].mark) { %>
                        <td><%= testsList[i].mark %></td>
                    <% } else { %>
                        <td><a href="/testPassing/<%= testsList[i].id %>" class="btn btn-dark btn-sm" role="button" aria-pressed="true">Pass the test</a></td>
                    <% } %>
                </tr>
        <% } %>
    </tbody>
</table>
</body>
</html>
